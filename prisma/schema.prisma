generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  User              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model AlertPreferences {
  id        String   @id @default(cuid())
  userId    String   @unique
  types     Json?
  updatedAt DateTime @updatedAt
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AlertSubscription {
  id        String   @id @default(cuid())
  userId    String
  ticker    String
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, ticker])
  @@index([userId])
}

model Fund {
  id                   String                 @id @default(cuid())
  slug                 String                 @unique
  name                 String
  description          String?
  methodology          Json?                  // {universe, selection, rebalancing}
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  FundHoldingsSnapshot FundHoldingsSnapshot[]
  FundSnapshot         FundSnapshot[]
  Holding              Holding[]
  Trade                Trade[]
}

model FundHoldingsSnapshot {
  id        String   @id @default(cuid())
  fundId    String
  date      DateTime
  holdings  Json
  createdAt DateTime @default(now())
  Fund      Fund     @relation(fields: [fundId], references: [id], onDelete: Cascade)

  @@unique([fundId, date])
  @@index([fundId, date])
}

model FundSnapshot {
  id                  String   @id @default(cuid())
  fundId              String
  date                DateTime
  equity              Float
  benchmark           Float?
  metrics             Json?
  sectorAllocation    Json?    // {sector: percentage}
  geoAllocation       Json?    // {country: percentage}
  marketCapAllocation Json?    // {Large: %, Mid: %, Small: %}
  createdAt           DateTime @default(now())
  Fund                Fund     @relation(fields: [fundId], references: [id], onDelete: Cascade)

  @@unique([fundId, date])
  @@index([fundId, date])
}

model Holding {
  id        String   @id @default(cuid())
  fundId    String
  ticker    String
  name      String?
  weightPct Float    @default(0)
  bucket    String?
  rationale String?
  pnl       Float?
  value     Float?
  updatedAt DateTime @updatedAt
  Fund      Fund     @relation(fields: [fundId], references: [id], onDelete: Cascade)

  @@unique([fundId, ticker])
  @@index([fundId])
}

model InsightPost {
  id        String        @id @default(cuid())
  userId    String
  title     String
  slug      String
  status    InsightStatus @default(DRAFT)
  contentMd String
  tickers   String[]      @default([])
  fundSlug  String?
  weekStart DateTime?
  weekEnd   DateTime?
  createdAt DateTime      @default(now())
  updatedAt DateTime   @updatedAt
  User      User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, slug])
  @@index([userId])
  @@index([userId, status])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model StockAnalysis {
  id                String         @id @default(cuid())
  userId            String
  ticker            String
  status            AnalysisStatus @default(PENDING)
  currentPrice      Float?
  marketCap         Float?
  peRatio           Float?
  valuationResult   String?
  sentimentResult   String?
  fundamentalResult String?
  riskResult        String?
  finalReport       String?
  recommendation    String?
  confidenceScore   Float?
  targetPrice       Float?
  agentResults      Json?
  processingTime    Int?
  error             String?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  User              User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([ticker])
  @@index([userId])
  @@index([userId, ticker])
}

model Trade {
  id        String      @id @default(cuid())
  fundId    String
  ticker    String
  action    TradeAction
  date      DateTime
  qty       Float?
  price     Float?
  rationale String?
  createdAt DateTime    @default(now())
  Fund      Fund        @relation(fields: [fundId], references: [id], onDelete: Cascade)

  @@index([fundId, date])
  @@index([fundId])
}

model User {
  id                String              @id @default(cuid())
  name              String?
  email             String?             @unique
  emailVerified     DateTime?
  image             String?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime           @updatedAt
  analysisCount     Int                 @default(0)
  isPro             Boolean             @default(false)
  Account           Account[]
  AlertPreferences  AlertPreferences?
  AlertSubscription AlertSubscription[]
  InsightPost       InsightPost[]
  Session           Session[]
  StockAnalysis     StockAnalysis[]
  WatchlistItem     WatchlistItem[]
  BrokerConnection  BrokerConnection?
  AutoTrade         AutoTrade[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model WatchlistItem {
  id        String   @id @default(cuid())
  userId    String
  ticker    String
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, ticker])
  @@index([userId])
}

// Broker Integration Models
model BrokerConnection {
  id           String   @id @default(cuid())
  userId       String   @unique
  broker       String   // "alpaca", "ibkr", etc.
  apiKey       String   // encrypted
  apiSecret    String   // encrypted
  paperTrading Boolean  @default(true)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AutoTrade {
  id          String      @id @default(cuid())
  userId      String
  fundSlug    String
  ticker      String
  action      TradeAction
  shares      Float
  status      TradeStatus @default(PENDING)
  orderId     String?     // broker order ID
  executedAt  DateTime?
  errorMsg    String?
  createdAt   DateTime    @default(now())
  User        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([fundSlug])
}

enum AnalysisStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum InsightStatus {
  DRAFT
  PUBLISHED
}

enum TradeAction {
  BUY
  SELL
}

enum TradeStatus {
  PENDING
  EXECUTING
  EXECUTED
  FAILED
  CANCELLED
}
