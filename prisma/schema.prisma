generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String      @id @default(cuid())
  name          String?
  email         String?     @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  watchlist        WatchlistItem[]
  alertSubscriptions AlertSubscription[]
  alertPreferences   AlertPreferences?
  insights           InsightPost[]
  stockAnalyses      StockAnalysis[]
  // Freemium usage tracking
  analysisCount      Int         @default(0)
  isPro              Boolean     @default(false)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Phase 11B: Persistent User Data (Stub)
model WatchlistItem {
  id        String   @id @default(cuid())
  userId    String
  ticker    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, ticker])
  @@index([userId])
}

model AlertSubscription {
  id        String   @id @default(cuid())
  userId    String
  ticker    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, ticker])
  @@index([userId])
}

model AlertPreferences {
  id        String   @id @default(cuid())
  userId    String   @unique
  types     Json?
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum InsightStatus {
  DRAFT
  PUBLISHED
}

model InsightPost {
  id          String        @id @default(cuid())
  userId      String
  title       String
  slug        String
  status      InsightStatus @default(DRAFT)
  contentMd   String
  tickers     String[]      @default([])
  fundSlug    String?
  weekStart   DateTime?
  weekEnd     DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, status])
  @@unique([userId, slug])
}

// Phase 12: Admin Dashboard & Fund Persistence
model Fund {
  id                   String                   @id @default(cuid())
  slug                 String                   @unique
  name                 String
  description          String?
  holdings             Holding[]
  trades               Trade[]
  snapshots            FundSnapshot[]
  holdingsSnapshots    FundHoldingsSnapshot[]
  createdAt            DateTime                 @default(now())
  updatedAt            DateTime                 @updatedAt
}

model Holding {
  id        String   @id @default(cuid())
  fundId    String
  ticker    String
  name      String?
  weightPct Float    @default(0)
  bucket    String?  // Optional override: SMALL, MED, LARGE
  rationale String?
  pnl       Float?
  value     Float?
  updatedAt DateTime @updatedAt
  
  fund Fund @relation(fields: [fundId], references: [id], onDelete: Cascade)

  @@index([fundId])
  @@unique([fundId, ticker])
}


enum TradeAction {
  BUY
  SELL
}

model Trade {
  id        String      @id @default(cuid())
  fundId    String
  ticker    String
  action    TradeAction
  date      DateTime
  qty       Float?
  price     Float?
  rationale String?
  createdAt DateTime    @default(now())

  fund Fund @relation(fields: [fundId], references: [id], onDelete: Cascade)

  @@index([fundId])
  @@index([fundId, date])
}

// Phase 13B: Time-Series Persistence
model FundSnapshot {
  id        String   @id @default(cuid())
  fundId    String
  date      DateTime // normalized UTC date (00:00)
  equity    Float    // index-style equity curve (start=100) OR actual portfolio value
  benchmark Float?   // optional, if storing benchmark curve
  metrics   Json?    // precomputed metrics (annReturn, sharpe, maxDD, etc.)
  createdAt DateTime @default(now())

  fund Fund @relation(fields: [fundId], references: [id], onDelete: Cascade)

  @@unique([fundId, date])
  @@index([fundId, date])
}

model FundHoldingsSnapshot {
  id        String   @id @default(cuid())
  fundId    String
  date      DateTime
  holdings  Json     // array of holdings at that date (ticker, weightPct, rationale hash)
  createdAt DateTime @default(now())

  fund Fund @relation(fields: [fundId], references: [id], onDelete: Cascade)

  @@unique([fundId, date])
  @@index([fundId, date])
}

// AI Stock Analysis Models
enum AnalysisStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model StockAnalysis {
  id              String          @id @default(cuid())
  userId          String
  ticker          String
  status          AnalysisStatus  @default(PENDING)

  // Market data snapshot at time of analysis
  currentPrice    Float?
  marketCap       Float?
  peRatio         Float?

  // AI-generated analysis sections
  valuationResult String?         @db.Text // From Valuation Agent
  sentimentResult String?         @db.Text // From Sentiment Agent
  fundamentalResult String?       @db.Text // From Fundamental Agent
  riskResult      String?         @db.Text // From Risk Agent
  finalReport     String?         @db.Text // From Portfolio Manager Agent

  // Summary and recommendation
  recommendation  String?         // BUY, HOLD, SELL
  confidenceScore Float?          // 0-100
  targetPrice     Float?

  // Metadata
  agentResults    Json?           // Raw agent outputs for debugging
  processingTime  Int?            // milliseconds
  error           String?         @db.Text

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, ticker])
  @@index([ticker])
  @@index([createdAt])
}
